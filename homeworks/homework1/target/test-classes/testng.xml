<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="All Test Suite" parallel="methods" thread-count="5">
    <test name="convertTests" verbose="2" >
        <classes>
            <class name="ru.pflb.study.kosenkov.homework1.TestMain">
                <methods>
                    <include name="testConvertDecToBin"/>
                    <include name="testConvertDecToHex"/>
                    <include name="testConvertBinToOct"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="isNum" verbose="2" >
        <classes>
            <class name="ru.pflb.study.kosenkov.homework1.TestMain">
                <methods>
                    <include name="testPositiveIsBinOROctORHex"/>
                    <include name="testNegativeIsBinOROctORHex"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>
